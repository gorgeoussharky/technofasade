{
    "author": "Mikhail Shuvalov",
    "version": "3.0.0",
    "description": "Starter project template boilerplate based on Webpack with SASS/PostCSS, ESBuild ESNext and Typescript support.",
    "browserslist": [
        "last 2 versions",
        "> 5%"
    ],
    "dependencies": {
        "bootstrap": "^5.2.3"
    },
    "devDependencies": {
        "@html-eslint/eslint-plugin": "^0.16.0",
        "@html-eslint/parser": "^0.16.0",
        "@principalstudio/html-webpack-inject-preload": "^1.2.7",
        "@types/node": "^18.14.2",
        "@types/webpack-env": "^1.18.0",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "autoprefixer": "^10.4.13",
        "clean-webpack-plugin": "^4.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.3",
        "esbuild-loader": "^3.0.1",
        "eslint": "^8.35.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-webpack-plugin": "^4.0.0",
        "fork-ts-checker-webpack-plugin": "^7.3.0",
        "handlebars-loader": "^1.7.3",
        "html-webpack-plugin": "^5.5.0",
        "image-minimizer-webpack-plugin": "^3.8.1",
        "mini-css-extract-plugin": "^2.7.2",
        "postcss": "^8.4.21",
        "postcss-loader": "^7.0.2",
        "postcss-preset-env": "^8.0.1",
        "postcss-scss": "^4.0.6",
        "prettier": "^2.8.4",
        "sass": "^1.58.3",
        "sass-loader": "^13.2.0",
        "sass-rem": "^3.0.0",
        "sharp": "^0.31.3",
        "style-loader": "^3.3.1",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-config-recommended": "^9.0.0",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-config-twbs-bootstrap": "^7.0.0",
        "stylelint-webpack-plugin": "^4.1.0",
        "svgo-loader": "^4.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "webpack": "^5.75.0",
        "webpack-bundle-analyzer": "^4.8.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1",
        "webpack-merge": "^5.8.0"
    },
    "engines": {
        "node": ">=16"
    },
    "keywords": [
        "webpack",
        "boilerplate",
        "template",
        "setup"
    ],
    "license": "MIT",
    "private": false,
    "scripts": {
        "dev": "cross-env NODE_OPTIONS=--loader=ts-node/esm webpack serve --config configuration/webpack.dev.config.ts --mode=development",
        "build": "cross-env NODE_OPTIONS=--loader=ts-node/esm webpack --config configuration/webpack.prod.config.ts",
        "build:wp": "cross-env wp_theme=none no_hash=true NODE_OPTIONS=--loader=ts-node/esm webpack --config configuration/webpack.prod.config.ts",
        "build:dev": "webpack --config configuration/webpack.dev.config.js --mode=development",
        "build:dev_wp": "webpack --config configuration/webpack.wp.config.js --mode=development",
        "lint:sass": "sass-lint -v -q",
        "lint:js": "eslint --ext .js src/assets/js/",
        "typecheck": "tsc --noEmit",
        "stats": "cross-env NODE_OPTIONS=--loader=ts-node/esm webpack --config configuration/webpack.prod.config.ts --mode=production --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json"
    },
    "target": "web"
}
